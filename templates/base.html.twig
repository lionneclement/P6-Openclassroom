<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('style.css')}}"/>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
            <div class="container">
              <a class="navbar-brand">Jimmy Sweat</a>
              <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarText"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav nav ml-auto nav-pills">
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('home_page')}}">Accueil</a>
                  </li>
                  {% if not app.user %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_login')}}">Se connecter</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_register')}}">S'inscrire</a>
                  </li>
                  {% endif %}
                  {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown">
                      Admin
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                      <a class="dropdown-item" href="{{path('style')}}">Styles</a>
                      <a class="dropdown-item" href="{{path('all_comment')}}">Commentaires</a>
                      <a class="dropdown-item" href="{{path('invalide_comment')}}">Commentaires invalides</a>
                    </div>
                  </li>
                  {% endif %}
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('create_trick')}}">Crée un Trick</a>
                  </li>
                    <li class="nav-item">
                      <a class="nav-link" href="{{path('profile')}}">Profile</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="{{path('app_logout')}}">Se deconnecter</a>
                    </li>
                  {% endif %}
                </ul>
              </div>
            </div>
          </nav>
        {% block body %}{% endblock %}
        <footer class="fixed-bottom">
            <div class="footer-copyright text-center bg-dark py-3">
              Copyright © 2020 | Propulsé par
              <a
                href="https://www.linkedin.com/in/lionne-cl%C3%A9ment/"
                target="_blank"
                >Lionne Clément</a
              >
            </div>
          </footer>
        {% block javascripts %}
            <script src="https://kit.fontawesome.com/38da8f1b40.js" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            <script type="text/javascript" src="{{ asset('js/formVideo.js') }}"></script>
        {% endblock %}
    </body>
</html>
