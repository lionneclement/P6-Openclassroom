{% extends 'base.html.twig' %}

{% block title %}{{ trick.title }}{% endblock %}

{% block body %}
<div class="container">
  <div class="text-center pt-5">
        <img src="{{asset('Images/default-top.jpg')}}" class="rounded mx-auto d-block" alt="Snowboard">
        <h1>Ajouter une photo</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {{ form(form) }}
        <h1 class="card-title">{{ trick.title }}</h1>
        <p class="card-text">{{ trick.description }}</p>
        <a class="btn btn-secondary" href="/tricks/update/{{ trick.id }}">Modifier</a>
  </div>  
</div>
{% endblock %}