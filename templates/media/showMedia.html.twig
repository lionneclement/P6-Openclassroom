{% block body %}
{% if photos[0] is defined or videos[0] is defined %}
<section class="py-3">
  <div class="text-center">
    <a
      class="btn btn-secondary"
      id="btn-mediaCollapse"
      data-toggle="collapse"
      href="#mediaCollapse"
      role="button"
      aria-expanded="false"
      aria-controls="mediaCollapse"
    >
      Voir les m√©dias
    </a>
  </div>
  <div class="collapse mt-3" id="mediaCollapse">
      <div class="row">
        {% for photo in photos %}
        <div class="col-6 col-md-3 col-lg-2 my-2">
          <div class="photo-container">
            <img
              class="card-img-top"
              src="{{asset('upload/'~ photo.name)}}"
              alt="{{ trick.title }}"
            />
          </div>
        </div>
        {% endfor %}
        {% for video in videos %}
        <div class="col-6 col-md-3 col-lg-2 my-2">
          <div class="video-container">
            <iframe src="{{ video.name }}" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
        {% endfor %}
      </div>
  </div>
</section>
{% endif %}
{% endblock %}